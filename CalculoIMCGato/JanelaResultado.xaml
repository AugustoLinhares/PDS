<Window x:Class="CalculoIMCGato.JanelaResultado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculoIMCGato"
        mc:Ignorable="d"
        Title="Resultado!" Height="720" Width="1000"
        Background="#F1D5D5"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Stretch="Uniform" Width="Auto" Height="Auto" MinWidth="1280" MinHeight="800" Source="/Imagens/troco_rosa.png" Grid.ColumnSpan="3" Margin="30,-50,0,0"/>
        
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="-200,20,-200,0">
            <TextBlock HorizontalAlignment="Center" FontSize="50" Name="txtResultado" Text="Você está "/>
            <TextBlock HorizontalAlignment="Center" FontSize="25" Name="txtIMC" Text="(seu IMC é "/>
            <Image x:Name="imgGato" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</Window>
